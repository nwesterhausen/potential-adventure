{
  "name": "potential-adventure",
  "version": "1.0.0",
  "description": "Experimental story blog",
  "scripts": {
    "clean": "rimraf public src/css/styles.css && pnpm pretty",
    "watch": "watch \"pnpm dev\" src",
    "dev": "pnpm clean && pnpm dev:css && eleventy --serve",
    "dev:css": "postcss src/css/tailwind.css -o public/css/styles.css",
    "build": "pnpm clean && pnpm build:css && eleventy",
    "build:css": "cross-env NODE_ENV=production postcss src/css/tailwind.css -o src/css/styles.css",
    "pretty": "prettier --write --ignore-unknown \"src/**\""
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:nwesterhausen/potential-adventure.git"
  },
  "keywords": [
    "eleventy",
    "11ty",
    "tailwind",
    "tailwindcss",
    "purgecss"
  ],
  "author": "Nicholas Westerhausen",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/marcamos/jet/issues"
  },
  "homepage": "https://github.com/marcamos/jet#readme",
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "autoprefixer": "^10.4.0",
    "cross-env": "^7.0.3",
    "cssnano": "^5.0.9",
    "daisyui": "^1.16.1",
    "postcss": "^8.3.11",
    "postcss-cli": "^9.0.1",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "tailwindcss": "^2.2.19",
    "watch": "^1.0.2"
  },
  "prettier": {
    "printWidth": 144,
    "proseWrap": "always"
  }
}
